{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true,  // Add this line
        "skipLibCheck": true,      // Optional: skip type checking for declaration files
        "forceConsistentCasingInFileNames": true // Optional: enforce case sensitivity
    },
    "include": ["src/**/*"]
}
